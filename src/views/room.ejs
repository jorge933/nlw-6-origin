        <main>
            <section id="question-form">

                <h2>Faça sua pergunta</h2>

                <form action="">

                    <label for="question" class="sr-only">O que você quer perguntar?</label>
                    <textarea id="question" name="question" placeholder="O que você quer perguntar?"></textarea>

                    <footer>

                        <div>
                            <div class="anonymous-question">
                                <img src="/img/lock.svg" alt="Cadeado">

                                Esta pergunta é anônima
                            </div>
                        </div>

                        <button class="hover-white" type="submit">Enviar</button>

                    </footer>
                </form>
            </section>

            <section id="questions">
                <h2 class="sr-only">Perguntas da comunidade</h2>

                <div class="questions">
                    
                    <div class="question-wrapper">

                        <div class="question-content">

                            <div class="user">
                                <img src="/img/avatar.svg" alt="Avatar do usuario">
                            </div>

                            <div class="question">
                                <p>Qual a diferença entre const, var e let</p>
                            </div>

                        </div>

                        <div class="actions">

                            <a href="#" class="check" data-id="4">
                                <img src="/img/check.svg" alt="">
                                Marcar como lida
                            </a>

                            <a href="#" class="delete" data-id="4">
                                <img src="/img/trash.svg" alt="">
                                Excluir
                            </a>
                        </div>
                    </div>

                    <div class="question-wrapper">

                        <div class="question-content">

                            <div class="user">
                                <img src="/img/avatar.svg" alt="Avatar do usuario">
